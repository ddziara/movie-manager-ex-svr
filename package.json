{
  "name": "movies-manager-ex-svr",
  "version": "1.0.0",
  "description": "App for Managing Favorite Movies - Server",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "debug": "npm run build && npm run watch-debug",
    "test": "jest --forceExit --verbose --detectOpenHandles",
    "test-debug": "npm run build && node --inspect-brk ./node_modules/jest/bin/jest.js --forceExit --verbose --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "datasource-sql": "^2.0.1",
    "express": "^4.18.1",
    "graphql": "^16.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.17.0",
    "jest": "^28.1.1",
    "memfs": "^3.4.4",
    "nodemon": "^2.0.16",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.3",
    "unionfs": "^4.4.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^7.5.3"
  }
}
